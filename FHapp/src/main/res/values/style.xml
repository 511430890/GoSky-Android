<?xml version="1.0" encoding="utf-8"?>  
<resources>    
<style name="MyDialogStyle" parent="android:Theme.Dialog">

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dialog背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>
    <style name="TopLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TopBtn">
        <item name="android:layout_width">@dimen/top_btn_size</item>
        <item name="android:layout_height">@dimen/top_btn_size</item>
        <item name="android:layout_gravity">center</item>

    </style>
    <style name="BottomBtn">
        <item name="android:layout_width">@dimen/bottom_btn_size</item>
        <item name="android:layout_height">@dimen/bottom_btn_size</item>
        <item name="android:layout_gravity">center</item>

    </style>
</resources>  


