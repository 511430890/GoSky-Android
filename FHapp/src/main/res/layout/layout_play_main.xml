<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_play_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_btn_bg_size"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/layout_top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_float_bk"
            android:alpha="0.3"
            ></ImageView>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_player_top"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/layout_top_bg" />




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_btn_bg_size"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/layout_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_float_bk"
            android:alpha="0.3"
            ></ImageView>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_player_bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/layout_bottom_bg"
            android:layout_alignParentTop="true" />
    </RelativeLayout>





    <include
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        layout="@layout/layout_player_right"
        android:layout_alignParentRight="true" />



    <TextView
        android:id="@+id/tvPreStreamInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_alignParentStart="true"
        android:text=""
        android:gravity="left"/>

    <TextView
        android:id="@+id/tvRecTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="#ff0000"
        android:text="00:00:00"
        android:gravity="left"/>



    <com.app.util.ETButton
        android:visibility="gone"
        android:id="@+id/btnShow"
        android:layout_width="@dimen/top_btn_size"
        android:layout_height="@dimen/top_btn_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_hide_off"
        ></com.app.util.ETButton>

</RelativeLayout>
