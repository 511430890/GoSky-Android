<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tvIPAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDNS"
        android:layout_below="@+id/edtDNS"
        android:layout_marginTop="@dimen/dp_size_30"
        android:text="IP地址:"
        android:textSize="@dimen/text_size"/>
    
    <EditText
        android:id="@+id/edtIPAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvIPAddr"
        android:layout_alignBottom="@+id/tvIPAddr"
        android:layout_alignLeft="@+id/edtDNS"
        android:layout_alignParentRight="true"
        android:digits="0123456789."
        android:ems="10"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvUserName"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_alignLeft="@+id/edtPort"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:singleLine="true"
        android:text="admin"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPassword"
        android:layout_alignBottom="@+id/tvPassword"
        android:layout_alignLeft="@+id/edtUserName"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:password="true"
        android:singleLine="true"
        android:text="admin"/>

    <TextView
        android:id="@+id/tvPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvIPAddr"
        android:layout_below="@+id/edtIPAddr"
        android:layout_marginTop="@dimen/dp_size_30"
        android:text="端口:" 
        android:textSize="@dimen/text_size"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPort"
        android:layout_below="@+id/edtPort"
        android:layout_marginTop="30dp"
        android:text="用户名:"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_below="@+id/edtUserName"
        android:layout_marginTop="@dimen/dp_size_30"
        android:text="密码:" 
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/edtPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPort"
        android:layout_alignBottom="@+id/tvPort"
        android:layout_alignLeft="@+id/edtIPAddr"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:numeric="integer"
        android:singleLine="true" >

        <requestFocus />
    </EditText>



    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPassword"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="@dimen/dp_size_20"
        android:text="记住密码"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="@dimen/dp_size_30"
        android:text="连接" 
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/edtDNS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDNS"
        android:layout_alignBottom="@+id/tvDNS"
        android:layout_alignLeft="@+id/edtAesKey"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvAesKkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginTop="@dimen/dp_size_30"
        android:text="AesKey:"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/edtAesKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvAesKkey"
        android:layout_alignBottom="@+id/tvAesKkey"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tvAesKkey"
        android:ems="10" />

    <TextView
        android:id="@+id/tvDNS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAesKkey"
        android:layout_below="@+id/edtAesKey"
        android:layout_marginTop="28dp"
        android:text="域名:"
        android:textSize="@dimen/text_size" />

</RelativeLayout>
